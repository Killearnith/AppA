<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Actividades.telefonoActivity"
    android:background="@drawable/b1">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="196dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="583dp"
        android:contentDescription="@string/foto_app"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/appa"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />


    <!--android:focusable="false"-->

    <TextView
        android:id="@+id/textView"
        android:layout_width="240dp"
        android:layout_height="100dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="308dp"
        android:fontFamily="@font/roboto_slab"
        android:text="@string/cabeceratelefono"
        android:textColor="@color/black"
        android:textSize="7.5pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/NumTel"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="420dp"
        android:autofillHints="phone"
        android:focusable="true"
        android:fontFamily="@font/roboto_slab"
        android:hint="@string/tel_fono_escribir"
        android:inputType="phone"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonContinuar"
        android:onClick="onContinuar"
        android:layout_width="220dp"
        android:layout_height="90dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="596dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="200dp"
        android:text="@string/continuar"
        android:fontFamily="@font/sigmar_one"
        android:backgroundTint="#063A51"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="OnClick" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="168dp"
        android:layout_marginTop="700dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>